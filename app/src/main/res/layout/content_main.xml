<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:background="@drawable/yoyo"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.sunsun.shoppingrouteguide.MainActivity"
    tools:showIn="@layout/app_bar_main">
<LinearLayout
    android:layout_marginTop="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="5"
    android:layout_gravity="center_horizontal"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="From:"
        android:textSize="20sp"/>

    <AutoCompleteTextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_weight="3.5"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:hint="Current Location">
        </AutoCompleteTextView>

    <ImageButton
        android:id="@+id/imageButton"
        style="@style/Widget.AppCompat.ImageButton"
        android:layout_width="0dp"
        android:layout_weight=".5"
        android:layout_height="wrap_content"
        android:adjustViewBounds="false"
        android:background="@android:color/holo_green_dark"
        android:cropToPadding="false"
        app:srcCompat="@android:drawable/ic_menu_send"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignEnd="@+id/autocomplete"
       android:onClick="getlocation"/>
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="5"
        android:layout_marginTop="4dp"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/textView4"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="To:   "
        android:textSize="20sp" />
    <AutoCompleteTextView
        android:layout_weight="4"
        android:layout_width="0dp"
        android:maxLines="2"
        android:layout_height="wrap_content"
        android:id="@+id/autocomplete"
        android:hint="Destination">

   </AutoCompleteTextView>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:weightSum="5"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/textView5"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Via: "
        android:textSize="20dp"/>

    <Spinner
        android:id="@+id/spinner"
        android:layout_weight="4"
        style="@drawable/gradient_spinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:background="@drawable/gradient_spinner"
        android:visibility="visible">
    <!-- <ImageView
         android:layout_width="30dp"
         android:layout_height="30dp"
         android:layout_marginTop="15dp"
         android:layout_marginRight="20dp"
         android:layout_alignParentRight="true"
         android:src="@drawable/arrow"/>-->
    </Spinner>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:weightSum="4"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">
 <Button
     android:id="@+id/button2"
     style="@drawable/buttonstyle"
     android:layout_width="0dp"
     android:layout_weight="2"
     android:layout_margin="4dp"
     android:layout_height="wrap_content"
     android:background="@drawable/buttonstyle"
     android:fontFamily="sans-serif-smallcaps"
     android:onClick="gotomappage"
     android:shadowColor="@color/common_google_signin_btn_text_light_focused"
     android:text="Find route"
     android:textAppearance="@style/TextAppearance.AppCompat"
     android:textStyle="bold" />

 <Button
     android:id="@+id/button6"
     android:layout_margin="4dp"
     android:layout_weight="2"
     android:layout_width="0dp"
     android:fontFamily="sans-serif-smallcaps"
     android:background="@drawable/buttonstyle"
     android:shadowColor="@color/common_google_signin_btn_text_light_focused"
     android:textAppearance="@style/TextAppearance.AppCompat"
     android:layout_height="wrap_content"
     android:textStyle="bold"
     android:layout_alignParentBottom="true"
     android:layout_centerHorizontal="true"
     android:onClick="nearbypage"
     android:text="Around me" />
        </LinearLayout>


</LinearLayout>
